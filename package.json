{
  "name": "auth-rest-api-express-postgresql-typescript",
  "version": "1.0.0",
  "description": "Rest API for a authentication coding challange",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "heroku-postbuild": "npm run build",
    "start": "node dist/index.js",
    "start:dev": "tsc-watch --onSuccess \"node -r dotenv/config .\"",
    "test": "jest --coverage --verbose"
  },
  "repository": "https://gitemad@bitbucket.org/gitemad/authentication.git",
  "author": "Emad Dehnavi",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "bcrypt": "5.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "pg": "8.7.3",
    "tsc-watch": "^4.1.0",
    "winston": "^3.2.1",
    "jsonwebtoken": "9.0.0",
    "typescript": "4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/compression": "^1.0.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.2",
    "@types/jest": "^25.1.0",
    "@types/node": "^13.5.0",
    "@types/pg": "7.14.1",
    "@types/uuid": "8.3.4",
    "@types/jsonwebtoken": "8.5.8",
    "jest": "^25.1.0",
    "ts-jest": "27.1.3",
    "tslint": "6.1.3"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
